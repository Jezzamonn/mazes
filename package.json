{
  "name": "maze",
  "version": "0.0.1",
  "description": "Library of Maze Algorithms",
  "scripts": {
    "watch": "npm-watch",
    "reload": "reload -b -d build",
    "static": "mkdir -p build/ && rsync -a --delete --exclude js/ --exclude css/ static/ build/",
    "sass": "mkdir -p build/css && sass scss/styles.scss build/css/styles.css",
    "webpack": "webpack",
    "build": "npm-run-all --parallel webpack sass static",
    "clean": "rm -rf build/*"
  },
  "watch": {
    "static": {
      "patterns": [
        "src/static/**"
      ],
      "extensions": "html,css,png,gif,mp3,ttf,txt"
    },
    "sprites": {
      "patterns": [
        "sprites/**"
      ],
      "extensions": "json,png,gif"
    },
    "music": {
      "patterns": [
        "music/**"
      ],
      "extensions": "mp3"
    },
    "sass": {
      "patterns": [
        "src/scss/**"
      ],
      "extensions": "scss"
    },
    "webpack": {
      "patterns": [
        "src/ts/**"
      ],
      "extensions": "js,jsx,ts,tsx"
    }
  },
  "author": "Jezzamon",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@tsconfig/recommended": "^1.0.1",
    "babel-loader": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "reload": "^3.2.1",
    "sass": "^1.57.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
